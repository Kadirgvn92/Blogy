
@model List<Article>

<section class="section">
	<div class="container">

		<div class="row mb-4">
			<div class="col-sm-6">
				<h2 class="posts-entry-title">@ViewBag.Category</h2>
			</div>
			<div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">Hepsini göster</a></div>
		</div>

		<div class="row">
			@foreach(var item in Model.Take(6))
			{
				<div class="col-lg-4 mb-4">
					<div class="post-entry-alt">
						<a href="/Article/Index/@item.ArticleID" class="img-link"><img src="@item.CoverImageUrl" alt="Image" class="img-fluid"></a>
						<div class="excerpt">
							<h2><a href="/Article/Index/@item.ArticleID">@item.Title</a></h2>
							<div class="post-meta align-items-center text-left clearfix">
								<figure class="author-figure mb-0 me-3 float-start"><img src="@item.Writer.ImageUrl" alt="Image" class="img-fluid"></figure>
								<span class="d-inline-block mt-1">By <a href="#">@item.Writer.Name</a></span>
								<span>&nbsp;-&nbsp; @item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
							</div>
							<p>
								@{
									var des = item.Description.Substring(0, 100).LastIndexOf(" ");
								}
								@item.Description.Substring(0, des)...
							</p>
							<p><a href="/Article/Index/@item.ArticleID" class="read-more">Okumaya devam et..</a></p>
						</div>
					</div>
				</div>
			}
		</div>

	</div>
</section>