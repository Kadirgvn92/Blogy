@model List<Article>


<section class="section posts-entry posts-entry-sm bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Take(4))
            {
                <div class="col-md-6 col-lg-3">
                    <div class="blog-entry">
                        <a href="/Article/Index/@item.ArticleID" class="img-link">
                            <img src="/articleImages/@item.CoverImageUrl" alt="Image" height="200px" width="300px" class="img-fluid">
                        </a>
                        <span class="date">@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
                        <h2><a href="/Article/Index/@item.ArticleID">@item.Title</a></h2>
                        <p>
                            @{
                                var p = "";
                                if (item.Description.Length < 100)
                                {
                                    p = item.Description.ToString();
                                }
                                else
                                {
                                    var des = item.Description.Substring(0, 100).LastIndexOf(" ");
                                    p = item.Description.Substring(0, des);
                                }
                            }
                            @p
                           
                        </p>
                        <p><a href="/Article/Index/@item.ArticleID" class="read-more">Okumaya devam et..</a></p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>