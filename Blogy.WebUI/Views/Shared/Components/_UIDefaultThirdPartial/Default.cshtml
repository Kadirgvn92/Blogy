@model List<Article>


<section class="section posts-entry posts-entry-sm bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="blog-entry">
                        <a href="single.html" class="img-link">
                            <img src="@item.CoverImageUrl" alt="Image" class="img-fluid">
                        </a>
                        <span class="date">@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
                        <h2><a href="single.html">@item.Title</a></h2>
                        <p>
                            @{
                                var des = item.Description.Substring(0, 100).LastIndexOf(" ");
                            }
                            @item.Description.Substring(0, des)...
                        </p>
                        <p><a href="/Article/Index/@item.ArticleID" class="read-more">Okumaya devam et..</a></p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>