@model List<Article>

<div class="section bg-light">
    <div class="container">

        <div class="row mb-4">
            <div class="col-sm-6">
                <h2 class="posts-entry-title">@ViewBag.Category</h2>
            </div>
            <div class="col-sm-6 text-sm-end"><a href="category.html" class="read-more">Hepsini Göster</a></div>
        </div>

        <div class="row align-items-stretch retro-layout-alt">

            <div class="col-md-5 order-md-2">
                @foreach (var item in Model.OrderBy(x => x.WriterID).Take(1))
                {
                    <a href="/Article/Index/@item.ArticleID" class="hentry img-1 h-100 gradient">
                        <div class="featured-img" style="background-image: url('@item.CoverImageUrl');"></div>
                        <div class="text">
                            <span>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
                            <h2>@item.Title</h2>
                        </div>
                    </a>
                }

            </div>

            <div class="col-md-7">
                @foreach (var item in Model.OrderByDescending(x => x.ArticleID).Take(1))
                {
                    <a href="/Article/Index/@item.ArticleID" class="hentry img-2 v-height mb30 gradient">
                        <div class="featured-img" style="background-image: url('@item.CoverImageUrl');"></div>
                        <div class="text text-sm">
                            <span>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
                            <h2>@item.Title</h2>
                        </div>
                    </a>

                }

                <div class="two-col d-block d-md-flex justify-content-between">
                    @foreach (var item in Model.OrderByDescending(x => x.WriterID).Take(2))
                    {
                        <a href="/Article/Index/@item.ArticleID" class="hentry v-height img-2 gradient">
                            <div class="featured-img" style="background-image: url('@item.CoverImageUrl');"></div>
                            <div class="text text-sm">
                                <span>@item.CreatedDate.ToString("dddd, dd MMMM yyyy")</span>
                                <h2>@item.Title</h2>
                            </div>
                        </a>
                    }
                </div>

            </div>
        </div>

    </div>
</div>