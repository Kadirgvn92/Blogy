
@model List<Writer>

<div class="col-md-6">
    <!-- USERS LIST -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Yazarlarımız</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <ul class="users-list clearfix">
                @foreach(var item in Model.OrderBy(x => x.WriterID).Take(8))
                {
                    <li>
                        <img src="/writerImages/@item.ImageUrl" style="width:145px;height:145px;object-fit:cover" alt="User Image">
                        <a class="users-list-name" href="#">@item.Name</a>
                        @if(item.Description.Length < 10)
                        {
                            <span class="users-list-date">@item.Description</span>
                        }
                        else
                        {
                            <span class="users-list-date">@item.Description.Substring(0,10)...</span>
                        }
                    </li>
                }
               
            </ul>
            <!-- /.users-list -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer text-center">
            <a href="javascript:">Tüm yazarları görüntüle..</a>
        </div>
        <!-- /.card-footer -->
    </div>
    <!--/.card -->
</div>