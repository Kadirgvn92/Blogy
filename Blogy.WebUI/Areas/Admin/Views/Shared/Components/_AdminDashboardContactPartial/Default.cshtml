
@model List<Contact>

<div class="col-md-6">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Son Gelen Mesajlar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th width="150px">Ad Soyad</th>
                            <th width="200px">Mail</th>
                            <th width="200px">Konu</th>
                            <th>Mesaj</th>
                            <th width="120px">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(x => x.MessageDate).Take(6))
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Subject</td>
                                <td>@item.MessageBody</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix text-center">
            <a href="/Admin/Comment/Index" class="uppercase">Tüm yorumları görüntüle</a>
        </div>
        <!-- /.card-footer -->
    </div>
</div>