@model List<Comment>

<div class="col-md-6">
    <div class="card">
        <div class="card-header border-transparent">
            <h3 class="card-title">Tüm Yorumlar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                        <tr>
                            <th width="150px">Ad Soyad</th>
                            <th width="300px">Blog</th>
                            <th>Yorum</th>
                            <th width="120px">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(x => x.CommentDate).Take(6))
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.Article.Title</td>
                                <td>@item.Content</td>
                                @if (item.CommentStatus == "Onay Bekliyor")
                                {
                                    <td><span class="badge badge-warning">@item.CommentStatus</span></td>
                                }
                                else if (item.CommentStatus == "Onaylandı")
                                {
                                    <td><span class="badge badge-success">@item.CommentStatus</span></td>
                                }
                                else
                                {
                                    <td><span class="badge badge-danger">@item.CommentStatus</span></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.card-body -->
        <div class="card-footer clearfix text-center">
            <a href="/Admin/Comment/Index" class="uppercase">Tüm yorumları görüntüle</a>
        </div>
        <!-- /.card-footer -->
    </div>
</div>